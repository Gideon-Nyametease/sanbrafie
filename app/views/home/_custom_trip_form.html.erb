 <div id="custom-mod" class="w3-modal w3-animate-opacity" style="display: block">
    <div class="w3-modal-content w3-card-4 " style="width: 540px; padding-bottom: 60px" >
      <div class="d-flex justify-content-end" style="padding:10px;">
        <span onclick="document.getElementById('custom-mod').style.display='none'"
            class="btn btn-lg btn-dark">&times;</span>
      </div>
      <br>
      <div class="w3-container">
        <%#= simple_form_for(@custom_trip) do |f| %>
        <%= simple_form_for :booking_form, url: create_custom_trip_path, :method =>'post' ,html: { class: 'form-horizontal' } do |f| %>
            <form>
                <div class="form-inputs my-form-margin">
                    <div class="col-sm-12">
                     
                        <div  class="mb-3">
                            <%= f.input :destination, input_html:{class:"form-control-lg sanbrafie-input", required: true}, label:"Where would you like to go?" %>   
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <%= f.input :surname, input_html:{class:"form-control-lg sanbrafie-input", required: true}, label:"Lastname" %>
                            </div>
                            <div class="col">
                                <%= f.input :othernames, input_html:{class:"form-control-lg sanbrafie-input", required: true}, label:"Firstname" %>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <%= f.input :phone_number, input_html:{class:"form-control-lg sanbrafie-input", required: true} %>
                            </div>
                            <div class="col">
                                <%= f.input :email, input_html:{class:"form-control-lg sanbrafie-input", required: true} %>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <%= f.input :coordination_preference, collection: @coordination_preference, label_method: :first, value_method: :last, input_html:{class:"form-control-lg form-select sanbrafie-input", required: true} %>
                            </div>
                            <div class="col">
                                <%= f.input :group_count, input_html:{class:"form-control-lg sanbrafie-input", required: true}, label:"Number of people" %>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <%= f.input :hotel_type, collection: @hotel_type, label_method: :first, value_method: :last, input_html:{class:"form-control-lg form-select sanbrafie-input", required: true}, label:"What type of hotel would you like to stay at?" %>
                            </div>
                            <div class="col">
                                <%= f.input :trip_duration, input_html:{class:"form-control-lg sanbrafie-input", required: true}, label:"How long do you want to stay?" %>
                            </div>
                        </div>
                        <div  class="mb-3">
                            <%= f.input :purpose_statement, collection: @purpose_statement, label_method: :first, value_method: :last, input_html:{class:"form-control-lg form-select sanbrafie-input", required: true} %>
                            <br>
                            <%= f.input :comment, as: :text, input_html:{class:"form-control-lg sanbrafie-input"}, placeholder:"Add a little detail to your purpose statement",label:false %>
                        </div>
                        <div  class="row mb-3">
                            <div class="col-1" style="margin-top: 1px !important; ">
                                <%= f.input :tos_agreement, wrapper: :vertical_boolean, as: :boolean , label: false, required: true %>
                            </div>
                            <div class="col-11">
                                <p>I agree to the <%= link_to "Terms of service",tos_path,remote: true %></p>
                            </div>
                        </div>
                        <br>
                        <div class="d-grid gap-2">
                            <%= f.submit "Customize your trip", class: "btn btn-lg btn-dark" %>
                        </div>
                    </div>
                </div>
            </form>
        <% end %>
      </div>
    </div>
</div>

<style>
    .sanbrafie-input{
        background-color:#f2f2f2  !important;
        border:none !important;
        border-radius: 0px !important;
    }
    .my-form-margin{
        padding: 0 40px;
    }
</style>

