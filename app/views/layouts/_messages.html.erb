<% if user_signed_in? %>
    <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" role="alert" id="flash">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
    <% end %>
<% end %>



<style>
  .alert{
      z-index: 100;
  }
</style>
<script type="text/javascript">
    $(document).ready(function(){
        setTimeout(function(){
            $('#flash').remove();
        }, 2000);
    })
</script>
<% end %>