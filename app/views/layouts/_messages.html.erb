<% if user_signed_in? %>
    <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div id="sys-msg" class="w3-modal w3-animate-opacity" style="display: block; margin-top: 50px; ">
            <div class="w3-modal-content w3-card-4 " style="width: 400px; padding-bottom:20px; height: 180px !important;" >
                <div class="d-flex justify-content-end" style="padding: 10px;">
                    <span onclick="document.getElementById('sys-msg').style.display='none'"
                        class="btn btn-md btn-light">&#10799;</span>
                </div>
                <div class="w3-container text-center" style="padding:-30px 10px 10px 10px;">
                    <% if name.to_s == 'notice'%>
                        <div class="alert alert-success" role="alert" id="flash">
                            <!--<div class="alert alert-<%#= name.to_s == 'notice' ? 'success' : 'danger' %>" role="alert" id="flash">-->
                            <%# <button type="button" class=" btn-close" data-dismiss="alert" aria-hidden="true"></button> %>
                            <i class="fas fa-check-circle fa-2x"></i> <%= content_tag :div, msg, :id => "flash_#{name}" %>
                        </div>
                    <% else %>
                        <div class="alert alert-danger" role="alert" id="flash">
                            <%# <button type="button" class=" btn-close" data-dismiss="alert" aria-hidden="true"></button> %>
                            <i class="fas fa-times-circle fa-2x"></i> <%= content_tag :div, msg, :id => "flash_#{name}" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
<% end %>
<%# &times; %>

<style>
    .flash{
        background-color: #fff !important;
       
    }
    .alert{
        background-color: #fff !important;
    }
    .alert-success{
        background-color: #fff !important;
        border-color: #fff !important;
        color: #4bb543 !important;
         font-size: 18px !important;
        font-weight: 600 !important;
    }
    .alert-danger{
        background-color: #fff !important;
        border-color: #fff !important;
        color: #ff8080 !important;
    }
</style>



<style>
  .alert{
      z-index: 100;
  }
</style>
<script type="text/javascript">
    $(document).ready(function(){
        setTimeout(function(){
            $('#sys-msg').remove();
        }, 3200);
    })
</script>
<% end %>