
<%= simple_form_for(@user_testimonial) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :fullname %>
    <%= f.input :trip %>
    <%= f.input :testimonial %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
