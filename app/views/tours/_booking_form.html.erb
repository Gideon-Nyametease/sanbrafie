 <div id="air-mod" class="w3-modal w3-animate-opacity" style="display: block; margin-top: 50px;">
    <div class="w3-modal-content w3-card-4 " style="width: 540px; padding-bottom: 60px" >
      <div class="d-flex justify-content-end" style="padding: 10px;">
        <span onclick="document.getElementById('air-mod').style.display='none'"
            class="btn btn-lg btn-dark">&times;</span>
      </div>
      <br>
      <div class="w3-container">
        <%= simple_form_for :booking_form, url: create_booking_path, :method =>'post' ,html: { class: 'form-horizontal' } do |f| %>
            <form>
                <div class="form-inputs my-form-margin">
                    <div class="col-sm-12">
                        <div class="d-grid gap-2">
                            <!--<span onclick="document.getElementById('air-mod').style.display='none'">-->
                                <%= link_to "Customize your trip", custom_trip_form_path, class:"btn btn-lg btn-danger", remote: true %>
                            <!--</span>-->
                        </div>
                        <br>
                        <div class="text-center">
                            <b><p>-- OR --</p></b>
                        </div>
                        <br>
                        <div  class="mb-3">
                            <%= f.input :tour_id, input_html:{value:params[:tour_id],class:"form-control-lg sanbrafie-input "}, as: :hidden %>   
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <%= f.input :surname, input_html:{value: current_user.surname, class:"form-control-lg sanbrafie-input",required:true} %>
                            </div>
                            <div class="col">
                                <%= f.input :othernames, input_html:{value: current_user.othernames, class:"form-control-lg sanbrafie-input", required:true} %>
                            </div>
                        </div>
                        <div class=" mb-3">
                                <%= f.input :phone_number, input_html:{class:"form-control-lg sanbrafie-input"} %>
                                <%= f.input :user_id, input_html:{value: current_user.id,class:"form-control-lg sanbrafie-input"},as: :hidden %>
                                <%= f.input :user_uid, input_html:{value: current_user.uid,class:"form-control-lg sanbrafie-input"},as: :hidden %>
                                <%= f.input :email, input_html:{value: current_user.email,class:"form-control-lg sanbrafie-input"},as: :hidden %>
                                <%= f.input :status, input_html:{value: "active",class:"form-control-lg sanbrafie-input"},as: :hidden %>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <%= f.input :coordination_preference, collection: @coordination_preference, label_method: :first, value_method: :last, input_html:{class:"form-control-lg sanbrafie-input form-select", required:true} %>
                            </div>
                            <div class="col">
                                <%= f.input :group_count, input_html:{class:"form-control-lg sanbrafie-input",required: true}, label:"Number of people" %>
                            </div>
                        </div>
                        <!--<div class="row mb-3">
                            <div class="col">
                                <%#= f.input :hotel_type, collection: @hotel_type, label_method: :first, value_method: :last, input_html:{class:"form-control-lg sanbrafie-input form-select"} %>
                            </div>
                            <div class="col">
                                <%#= f.input :tour_duration, input_html:{class:"form-control-lg sanbrafie-input"} %>
                            </div>
                        </div>-->
                        <div  class="mb-3">
                            <%= f.input :purpose_statement, collection: @purpose_statement, label_method: :first, value_method: :last, input_html:{class:"form-control-lg sanbrafie-input form-select"} %>
                            <br>
                            <%= f.input :comment, as: :text, input_html:{class:"form-control-lg sanbrafie-input"}, placeholder:"Add a little detail to your purpose statement",label:false %>
                        </div>
    
                        <br>
                        <div class="d-grid gap-2">
                            <%= f.submit "Book a tour", class: "btn btn-lg btn-dark" %>
                        </div>
                    </div>
                </div>
            </form>
        <% end %>
      </div>
    </div>
</div>

<style>
.w3-modal{
    z-index: 999 !important;
}
    .sanbrafie-input{
        background-color:#f2f2f2  !important;
        border:none !important;
        border-radius: 0px !important;
    }
    .my-form-margin{
        padding: 0 40px;
    }
</style>

