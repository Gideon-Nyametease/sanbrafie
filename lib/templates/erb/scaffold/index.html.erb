<div class="my-content"> 
    <div class="index-title">
        <h2> <%= plural_table_name %> </h2>
    </div>
    <div class="shadow-box-no-border">
        <hr/>
        <div>
            <button class="btn btn-outline-primary">Download CSV  <i class="fa fa-download"></i></button>
            <button class="btn btn-outline-primary">Search  <i class="fa fa-search"></i></button>

            <%%= link_to new_<%= singular_table_name %>_path, class:"btn btn-outline-primary float-right" do %>
                <span class="glyphicon glyphicon-plus"></span>
                New <%= singular_table_name %>
            <%% end %>
        </div>
    

        <div class="table-responsive">
        <hr/>
            <table class="table table-striped table-hover">
                <thead class="bg-light">
                <tr>
                    <th>#</th>
                    <% attributes.each do |attribute| -%>
                    <th><%= attribute.human_name %></th>
                    <% end -%>
                    <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                <%% @<%= plural_table_name %>.each_with_index do |<%= singular_table_name %>, index| %>
                    <tr>
                        <td><%%= index + 1 %></td>
                    <% attributes.each do |attribute| -%>
                    <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
                    <% end -%>       
                        <td>
                            <%%= link_to <%= singular_table_name %>, class:"btn btn-md btn-outline-primary",remote: true do %>
                                Details
                            <%% end %>
                        </td>                 
                        <td>
                            <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class:"btn btn-md btn-secondary" do %>
                                <i class="fa fa-edit"></i>
                            <%% end %>
                        </td>
                        <td>
                            <%%= link_to  <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-md btn-danger" do %>
                                <i class="fa fa-trash"></i>
                            <%% end %>
                        </td>
                    
                    </tr>
                <%% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
